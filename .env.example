# ===========================================
# OCTO Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control!
# ===========================================

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# n8n Integration
VITE_N8N_WEBHOOK_URL=https://your-n8n-instance/webhook
VITE_N8N_API_KEY=your-n8n-api-key

# Azure Speech (Text-to-Speech)
VITE_AZURE_SPEECH_KEY=your-azure-speech-key
VITE_AZURE_SPEECH_REGION=eastus

# Stack Auth (Authentication)
NEXT_PUBLIC_STACK_PROJECT_ID=your-stack-project-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=your-publishable-key
STACK_SECRET_SERVER_KEY=your-secret-server-key

# Azure OpenAI (Sora 2 - Video Generation)
AZURE_OPENAI_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/openai/v1/videos
AZURE_OPENAI_KEY=your-azure-openai-key

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER=octo-videos

# Azure OpenAI (GPT-4o - Prompt Enhancement)
AZURE_OPENAI_GPT4O_ENDPOINT=https://your-endpoint.cognitiveservices.azure.com/openai/deployments/gpt-4o/chat/completions?api-version=2025-01-01-preview
AZURE_OPENAI_GPT4O_KEY=your-gpt4o-key

# JWT Secret (for custom auth - generate a secure random string)
VITE_JWT_SECRET=generate-a-secure-random-string-at-least-32-characters

